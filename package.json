{
  "name": "web-core",
  "version": "0.1.1",
  "description": "Core Utils for Odoo Web Client",
  "main": "src/index.ts",
  "scripts": {
    "prebuild": "tsc --allowjs --lib es2017,dom --target esnext --outDir dist/core src/*",
    "build": "rollup -c",
    "postbuild": "uglifyjs dist/core.js -o dist/core.min.js --compress --mangle",
    "test": "jest",
    "test:watch": "jest --watch",
    "demo:build": "cpx \"demo/**/*.{html,js,css,ttf,woff,woff2}\" dist/app && npm-run-all --parallel demo:build:*",
    "demo:build:css": "sass demo/static/src/scss/app.scss dist/app/app.css",
    "demo:build:js": "tsc --allowjs -m amd --lib es2017,dom --target esnext --outfile dist/app/main.js demo/static/src/ts/main.ts",
    "demo:build:xml": "cpx demo/static/src/xml/templates.xml dist/app",
    "demo:minify": "uglifyjs dist/app/main.js -o dist/app/main.js --compress --mangle",
    "demo:serve": "live-server --entry-file=index.html dist/app/",
    "predemo:dev": "npm run demo:build",
    "demo:dev": "npm-run-all --parallel \"demo:build:* -- --watch\" demo:serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ged-odoo/web-core.git"
  },
  "author": "Odoo",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ged-odoo/web-core/issues"
  },
  "homepage": "https://github.com/ged-odoo/web-core#readme",
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "cpx": "^1.5.0",
    "jest": "^23.6.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.6.0",
    "rollup-plugin-typescript2": "^0.19.3",
    "sass": "^1.16.1",
    "snabbdom-to-html": "^5.1.1",
    "source-map-support": "^0.5.10",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "snabbdom": "^0.7.3"
  }
}
